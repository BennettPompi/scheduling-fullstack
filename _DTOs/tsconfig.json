{
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "strict": true,
        "resolveJsonModule": true,
        "tsBuildInfoFile": "dist/.tsbuildinfo"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
